@model Booking.ViewModels.BookingVM

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
  .form-control{
    width: 100% !important;
    max-width: 100%;
  }
</style>
<div class="col-md-6 col-md-offset-3">
<h2>Booking now</h2>

@using (Html.BeginForm("AddBooking", "Booking", FormMethod.Post))
{
  @Html.HiddenFor(b => b.Books.Id);
  @Html.HiddenFor(b => b.Books.Message);
  @Html.HiddenFor(b => b.Books.Icon);

  <div class="form-group">
    @Html.LabelFor(b => b.Books.Name)
    @Html.TextBoxFor(b => b.Books.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Books.Name)
  </div>

  <div class="form-group">
    @Html.LabelFor(b => b.Books.Lastname)
    @Html.TextBoxFor(b => b.Books.Lastname, new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Books.Lastname)
  </div>

  <div class="form-group">
    @Html.LabelFor(b => b.Books.Email)
    @Html.TextBoxFor(b => b.Books.Email, new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Books.Email)
  </div>

  <div class="form-group">
    @Html.LabelFor(b => b.Books.Duration)
    @Html.TextBoxFor(b => b.Books.Duration, new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Books.Duration)
  </div>

  <div class="form-group">
    @Html.LabelFor(b => b.Books.City)
    @Html.DropDownListFor(b => b.Books.City, new SelectList(Model.Cities, "CityId", "Name"), new { @class = "form-control" })
  </div>


  <div class="form-group">
    <button type="submit" class="btn btn-success" role="button">Send</button>
  </div>
}
  </div>
