@model Booking.ViewModels.BookingVM

@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("", "", FormMethod.Post))
{
  <div class="form-group">
    @Html.LabelFor(b => b.Books.Name)
    @Html.TextBoxFor(b => b.Books.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Books.Name)
  </div>



  <div class="form-group">
    <button type="submit" class="btn btn-success" role="button">Enviar</button>
  </div>
}
